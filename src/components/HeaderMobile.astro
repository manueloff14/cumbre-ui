---
export interface Props {
    title: string;
}

const { title } = Astro.props
---

<div class="flex items-center justify-between">
    <div class="flex flex-grow basis-0 lg:hidden">
        <img
            class="w-[40px]"
            src="https://th.bing.com/th/id/R.70ecfdd862bdc3fdbf5715085812f49e?rik=fDJPk4oWTEisvw&pid=ImgRaw&r=0"
            alt="Logo Cumbre"
        />
    </div>
    <span class="text-lg">
        <strong>{title}</strong>
    </span>
    <div class="flex flex-grow justify-end basis-0">
        <a href="/ayuda">
            <button class="bg-red-500 py-2 px-4 rounded-xl">Ayuda</button>
        </a>
    </div>
</div>